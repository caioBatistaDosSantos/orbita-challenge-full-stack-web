version: '3.9'
services:
  frontend:
    container_name: app_frontend
    build: ./front-end
    ports:
      - 8080:8080
    working_dir: /app-frontend
    volumes:
      - ./front-end/src:/app-frontend/src
    depends_on:
      backend:
        condition: service_healthy
    healthcheck:
      test: ['CMD', 'lsof', '-t', '-i:8080']
      timeout: 10s
      retries: 5
  backend:
    container_name: app_backend
    build: ./back-end/back-end.Web
    ports:
      - 3001:3001
    working_dir: /app-backend
    depends_on:
      db:
        condition: service_healthy
    environment:
      - DOTNET_CONNECTION_STRING:@"server=localhost;database=StudentsDb;uid=root;password=123456;"
  db:
    image: mysql:8.0.21
    container_name: db
    platform: linux/x86_64
    ports:
      - 3306:3306
    environment:
      - MYSQL_ROOT_PASSWORD=123456
    restart: 'always'
    healthcheck:
      test: ['CMD', 'mysqladmin', 'ping', '-h', 'localhost']
      timeout: 10s
      retries: 5
    cap_add:
      - SYS_NICE